@model SpendSmart.Pages.Dashboard.Content.TransactionsEntity

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="UserId" />
<input type="hidden" asp-for="Account" />
<div class="form-group mt-3">
	<label asp-for="Date"></label>
	<input asp-for="Date" type="month" class="form-control border-info" />
	<span asp-validation-for="Date" class="text-danger"></span>
</div>
<div class="form-group mt-3">
	<label asp-for="Name"></label>
	<input asp-for="Name" class="form-control border-info" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group mt-3" hidden>
	<label asp-for="Account"></label>
	<select asp-for="Account" class="form-control border-info">
		@if (TempData["Accounts"] is List<string> accounts && accounts.Any())
		{
			<option value="@Model.Name" selected>@Model.Name</option>
			accounts = accounts.OrderBy(a => a).ToList();
			@foreach (var account in accounts)
			{
				<option value="@account" data-account="@account">@account</option>
			}
		}
		else
		{
			<option value="">No accounts found.</option>
		}
	</select>
	<span asp-validation-for="Account" class="text-danger"></span>
</div>
<div class="form-group mt-3">
	<label asp-for="Amount"></label>
	<input asp-for="Amount" class="form-control border-info" />
	<span asp-validation-for="Amount" class="text-danger"></span>
</div>

<p class="text-danger mt-2">Changing the account for a transaction is not available.</p>