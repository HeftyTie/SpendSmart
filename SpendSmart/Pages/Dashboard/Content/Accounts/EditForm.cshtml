@model SpendSmart.Pages.Dashboard.Content.AccountsEntity;

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="UserId" />

<div class="form-group mx-md-5">
	<label asp-for="Name"></label>
	<input asp-for="Name" class="form-control border-info" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group mx-md-5">
	<label asp-for="Balance"></label>
	<input asp-for="Balance" class="form-control border-info" disabled/>
	<span asp-validation-for="Balance" class="text-danger"></span>
</div>
<div class="form-group mx-md-5">
	<label asp-for="Type" class="form-label">Account Type</label>
	<select asp-for="Type" class="form-control" id="editAccount">
		<option value="None">None</option>
		<option value="Savings">Savings</option>
		<option value="Budget">Budget</option>
	</select>
	<span asp-validation-for="Type" class="text-danger"></span>
</div>
<div class="mx-md-5" id="editTypeName">
	<div class="form-group">
		<label asp-for="TypeName" class="form-label">Goal</label>
		<input asp-for="TypeName" type="text" class="form-control" />
		<span asp-validation-for="TypeName" class="text-danger"></span>
	</div>
</div>
<div class="mx-md-5" id="editGoal">
	<div class="form-group">
		<label asp-for="Goal" class="form-label">Goal</label>
		<input asp-for="Goal" type="text" class="form-control" />
		<span asp-validation-for="Goal" class="text-danger"></span>
	</div>
</div>
